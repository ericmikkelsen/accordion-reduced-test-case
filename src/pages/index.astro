  border-top-left-radius:1rem;
  border-top-right-radius:1rem;
  view-transition-name:top; 
  grid-row: 1;
  border-bottom: 0;
}
de-animator::after {
  border-bottom-left-radius:1rem;
  border-bottom-right-radius:1rem;
  view-transition-name:bottom;
  grid-row: 3;
  border-top: 0;
  margin-top: -1px;
}
b {
  background: black;
  border-left: 2px solid red;
  border-right: 2px solid red;
  display: block;
  grid-column: 1;
  grid-row: 2;
  height: 100%;
  view-transition-name: middle;
  width: 100%;
}
::view-transition-old(middle),
::view-transition-new(middle) {
  height: 100%;
}
details {
  z-index: 1;
  grid-row: 1 / span 2;
  grid-column: 1;
  color: white;
/*   opacity: 0; */
}
details div {
  view-transition-name: text;
}
summary {
  view-transition-name: summary;
  padding: 1em;
}
div {
 padding: 1em;
opacity: 0;
}
aside {
  height: 15rem;
  width: 15rem;
  background: red;
  view-transition-name: aside;
}
</style>

  
  
  
