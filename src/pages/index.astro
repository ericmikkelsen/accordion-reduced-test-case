}
de-animator {
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: 1em auto 1em;
  overflow: hidden;
}
de-animator::before,
de-animator::after {
  content:'';
  display: block;
  height: 1rem;
  background: black;
  grid-column: 1;
  border: 2px solid red;
}
